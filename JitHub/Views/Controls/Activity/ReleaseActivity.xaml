<UserControl
    x:Class="JitHub.Views.Controls.Activity.ReleaseActivity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:code="using:JitHub.Views.Controls.Code"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:JitHub.Views.Controls.Activity"
    xmlns:markdown="using:CommunityToolkit.Labs.WinUI.MarkdownTextBlock"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrol="using:JitHub.Views.Controls.Common"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Padding="16" Style="{StaticResource ActivityContainer}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="4">
            <usercontrol:Avatar
                Login="{x:Bind ViewModel.Actor.Login, Mode=OneWay}"
                ShowLogin="True"
                Url="{x:Bind ViewModel.Actor.AvatarUrl, Mode=OneWay}" />
            <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.Action, Mode=OneWay}" />
            <TextBlock VerticalAlignment="Center" Text="a release in" />
            <code:CodeButton
                VerticalAlignment="Center"
                Ref="{x:Bind ViewModel.Repo.DefaultBranch, Mode=OneWay}"
                Repo="{x:Bind ViewModel.Repo, Mode=OneWay}"
                Text="{x:Bind ViewModel.RepoName, Mode=OneWay}" />
            <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.CreatedAt, Converter={StaticResource TimeAgoConverter}, ConverterParameter='', Mode=OneWay}" />
        </StackPanel>
        <Grid Grid.Row="1" Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Margin="0,4,0,0"
                Padding="4,2">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.Release.Name, Mode=OneWay}" />
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.Release.Id, Converter={StaticResource NumberToHashTaggedStringConverter}, Mode=OneWay}" />
                </StackPanel>
            </Button>
            <markdown:MarkdownTextBlock
                Grid.Row="1"
                Config="{x:Bind ViewModel.MarkdownConfig, Mode=OneWay}"
                Text="{x:Bind ViewModel.MarkdownText, Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>
