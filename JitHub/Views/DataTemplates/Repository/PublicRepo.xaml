<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:common="using:JitHub.Views.Controls.Common"
    xmlns:models="using:JitHub.Models">
    <DataTemplate x:Key="PublicRepo">
        <Button
            Margin="0,0,4,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding DetailNavigationCommand}">
            <animations:Implicit.ShowAnimations>
                <animations:TranslationAnimation
                    EasingType="Cubic"
                    From="-150, 0, 0"
                    To="0"
                    Duration="0:0:0.5" />
            </animations:Implicit.ShowAnimations>
            <Grid>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource SegoeFluentIcons}"
                        FontSize="16"
                        Glyph="&#xe7c3;" />
                    <TextBlock VerticalAlignment="Center" Text="{Binding Repository.Name}" />
                </StackPanel>
            </Grid>
        </Button>
    </DataTemplate>
    <DataTemplate x:Key="PublicRepoSearchResult">
        <Button
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            Command="{Binding DetailNavigationCommand, Mode=OneWay}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <FontIcon
                    Grid.Column="0"
                    Margin="0,5,5,0"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource SegoeFluentIcons}"
                    FontSize="16"
                    Glyph="&#xe7c3;" />
                <StackPanel Grid.Column="1">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{Binding Repository.FullName, Mode=OneWay}" />
                    <TextBlock Text="{Binding Repository.Description, Mode=OneWay}" TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <FontIcon
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SegoeFluentIcons}"
                            FontSize="12"
                            Glyph="&#xE735;" />
                        <TextBlock VerticalAlignment="Bottom" Text="{Binding Repository.StargazersCount, Converter={StaticResource NumberToKizedStringConverter}, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Button>
    </DataTemplate>
    <DataTemplate x:Key="SelectablePublicRepo">
        <Grid Style="{ThemeResource Container}">
            <CheckBox IsChecked="{Binding Selected, Mode=TwoWay}">
                <Grid Margin="16,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        VerticalAlignment="Top"
                        FontFamily="{StaticResource SegoeFluentIcons}"
                        FontSize="16"
                        Glyph="&#xe7c3;" />
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding Repo.Repository.FullName, Mode=OneWay}" />
                        <TextBlock Text="{Binding Repo.Repository.Description, Mode=OneWay}" TextWrapping="Wrap" />
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon
                                FontFamily="{StaticResource SegoeFluentIcons}"
                                FontSize="16"
                                Glyph="&#xE735;" />
                            <TextBlock Text="{Binding Repo.Repository.StargazersCount, Converter={StaticResource NumberToKizedStringConverter}, Mode=OneWay}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </CheckBox>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
