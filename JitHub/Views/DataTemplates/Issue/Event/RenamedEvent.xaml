<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:JitHub.Views.Controls.Common">
    <DataTemplate x:Key="RenamedEventTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <common:Avatar
                Grid.Column="0"
                HorizontalAlignment="Center"
                Login="{Binding Actor.Login, Mode=OneWay}"
                Url="{Binding Actor.AvatarUrl, Mode=OneWay}" />
            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="4">
                <TextBlock Text="{Binding Actor.Login, Mode=OneWay}" />
                <TextBlock>
                    <Run Text="renamed this from " />
                    <Run Text="{Binding Rename.From, Mode=OneWay}" />
                    <Run Text=" to " />
                    <Run Text="{Binding Rename.To, Mode=OneWay}" />
                </TextBlock>
                <TextBlock Text="{Binding CreatedAt, Converter={StaticResource TimeAgoConverter}, ConverterParameter='', Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
